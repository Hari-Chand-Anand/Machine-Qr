# Copy this file to .env for local dev.
# IMPORTANT: Do NOT commit your real .env to Git.

# -------------------------
# Database (Postgres)
# -------------------------
# Local Docker example:
# DATABASE_URL="postgresql://postgres:pass@localhost:5432/qrdb?schema=public"
# Neon example (pooled / recommended for runtime):
# DATABASE_URL="postgresql://<user>:<password>@<host>/<db>?sslmode=require"
DATABASE_URL=""

# Non-pooled connection (recommended for Prisma migrations/DDL with Neon/PgBouncer)
# Neon provides a "non-pooling" / "direct" URL in the Quickstart snippet.
DATABASE_URL_UNPOOLED=""

# -------------------------
# Admin login for /admin
# -------------------------
ADMIN_USER=""
ADMIN_PASS=""

# -------------------------
# Auth (cookie/token signing)
# -------------------------
# 32+ random chars
AUTH_SECRET=""

# -------------------------
# Public config (safe to expose)
# -------------------------
# In production you can set this to your Vercel domain (optional).
# If empty, the app will infer from request headers.
NEXT_PUBLIC_BASE_URL=""

NEXT_PUBLIC_COMPANY_NAME="Hari Chand Anand & Co."
NEXT_PUBLIC_LOGO_URL=""

# Optional defaults
NEXT_PUBLIC_DEFAULT_WA_NUMBER=""
NEXT_PUBLIC_DEFAULT_WA_TEMPLATE=""
